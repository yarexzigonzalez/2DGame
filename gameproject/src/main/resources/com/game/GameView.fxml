<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.input.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.game.GameController"
            prefWidth="6361" prefHeight="1080"
            onKeyPressed="#onKeyPressed"
            focusTraversable="true">
    <!-- Camera/View Group -->
    <Group fx:id="gameView" layoutX="0" layoutY="0">

        <!-- Background -->
        <Rectangle width="6361" height="1080" fill="lightblue"/>

        <!-- Game world pane (part that gon move) -->
        <Pane fx:id="world" prefWidth="6366" prefHeight="1080">

            <!-- Water -->
            <Rectangle fx:id="water" layoutX="0" layoutY="1000" width="5361" height="80" fill="blue"/>
            
            <!-- Floating Platforms -->
            <Rectangle fx:id="floatingPlatform" layoutX="300" layoutY="850" width="150" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform2" layoutX="488" layoutY="750" width="150" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform3" layoutX="1075" layoutY="830" width="150" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform4" layoutX="1649" layoutY="850" width="150" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform5" layoutX="1843" layoutY="750" width="437" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform6" layoutX="2325" layoutY="849" width="150" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform7" layoutX="3136" layoutY="859" width="430" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform8" layoutX="3416" layoutY="741" width="150" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform9" layoutX="3900" layoutY="859" width="250" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform10" layoutX="4936" layoutY="859" width="150" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform11" layoutX="5156" layoutY="729" width="150" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform12" layoutX="4982" layoutY="579" width="150" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform13" layoutX="5200" layoutY="462" width="150" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform14" layoutX="4200" layoutY="924" width="150" height="20" fill="green"/>
            <Rectangle fx:id="floatingPlatform15" layoutX="5156" layoutY="312" width="300" height="20" fill="green"/>

            <!-- Wall Obstacle -->
            <Rectangle fx:id="wall" layoutX="5450" layoutY="371" width="135" height="609" fill="green"/>

            <!-- Player -->
            <ImageView fx:id="player" layoutX="100" layoutY="850"/>

            <!-- Ground Platforms -->
            <Rectangle fx:id="groundPlatform" layoutX="-115" layoutY="980" width="490" height="100" fill="darkgreen"/>
            <Rectangle fx:id="groundPlatform2" layoutX="610" layoutY="980" width="1098" height="100" fill="darkgreen"/>
            <Rectangle fx:id="groundPlatform3" layoutX="2395" layoutY="980" width="1489" height="100" fill="darkgreen"/>
            <Rectangle fx:id="groundPlatform4" layoutX="4333" layoutY="980" width="4034" height="100" fill="darkgreen"/>
        </Pane>
    </Group>

    <!-- UI: Health & Inventory (stays fixed on screen)-->
    <Rectangle fx:id="healthBar" fill="LimeGreen" x="20" y="20" width="200" height="20"/>
    <Label fx:id="healthLabel" layoutX="30" layoutY="20" text="Health: 3" style="-fx-font-size: 18;"/>
    <Label fx:id="healLabel" layoutX="700" layoutY="20" text="" 
       style="-fx-font-size: 18; -fx-background-color: rgba(57, 219, 57, 0.9); -fx-text-fill: white; -fx-padding: 5px;"/>
    <Label fx:id="speedLabel" layoutX="900" layoutY="20" text="" 
        style="-fx-font-size: 18; -fx-background-color: rgba(0, 188, 226, 0.6); -fx-text-fill: white; -fx-padding: 5px;"/>
    <Label fx:id="damageLabel" layoutX="1100" layoutY="20" text="" 
        style="-fx-font-size: 18; -fx-background-color: rgba(206, 0, 0, 0.6); -fx-text-fill: white; -fx-padding: 5px;"/>

    <!-- <Button fx:id="inventoryButton" layoutX="700" layoutY="20" text="Inventory" onAction="#openInventory"/> -->

</AnchorPane>